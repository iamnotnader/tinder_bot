{{view Ember.Select content=dateChoices
  value=fieldsSet.selectedDate
  optionValuePath="content.id"
  optionLabelPath="content.label"
  classNames="home__search-dropdown date-time-picker__dropdown-stuff"
}}
{{view Ember.Select content=fieldsSet.timeChoices
  value=fieldsSet.selectedHour
  optionValuePath="content.id"
  optionLabelPath="content.label"
  classNames="home__search-dropdown date-time-picker__dropdown-stuff"
}}
:
{{view Ember.Select content=minuteChoices
  value=fieldsSet.selectedMinute
  optionValuePath="content.id"
  optionLabelPath="content.label"
  classNames="home__search-dropdown date-time-picker__dropdown-stuff"
}}
{{view Ember.Select content=amOrPmChoices
  value=fieldsSet.selectedAmOrPm
  optionValuePath="content.label"
  optionLabelPath="content.label"
  classNames="home__search-dropdown date-time-picker__dropdown-stuff"
}}
{{#if shouldSelectDuration}}
  {{view Ember.Select content=durationChoices
    value=fieldsSet.selectedDuration
    optionValuePath="content.label"
    optionLabelPath="content.label"
    classNames="home__search-dropdown date-time-picker__dropdown-stuff"
  }}
{{/if}}

{{#if inputIsValid}}
  <img src="http://www.clipartbest.com/cliparts/yco/ejr/ycoejrKMi.png" width="30px" height="30px" class="date-picker__check">
